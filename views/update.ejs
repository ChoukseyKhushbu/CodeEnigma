<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
        <title>CodeEnigma | <%= title %></title>
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta/css/bootstrap.min.css" integrity="sha384-/Y6pD6FV/Vv2HJnA6t+vslU6fwYXjCFtcEpHbNJ0lyAFsXTsjBbfaDjzALeQsN6M" crossorigin="anonymous">
        <link rel='stylesheet' href='/stylesheets/nprogress.css'/>
        <link rel="stylesheet" href="/stylesheets/loader.css">
        <link rel="stylesheet" href="/stylesheets/loaders.css">

    </head>
    <body onload="myFunction()">
    <!-- <body> -->
    <div id="loaderContainer">
      <div class="loader"><div class="ball-grid-pulse"><div></div><div></div><div></div><div></div><div></div><div></div><div></div><div></div><div></div></div></div>
    </div>
    <script>
    function myFunction() {
      var myVar = setTimeout(showPage, 1000);
    }

    function showPage()
    {
      // console.log("Hide Loader and show page");
      // $(".loader").hide();
      $("#loaderContainer").hide();
      $(".container-fluid").show();
      // $("#main-content").show();
    }
    </script>

        <div class="container-fluid">
            <!-- HEADER -->
            <div class="row" id="header">
              <div class="col-md-1">
                <input type="text" class="form-control" id="id" placeholder="id" value="<%= question.id %>" >
              </div>
              <div class="col-md-6">
                <input type="text" class="form-control" id="title" placeholder="title" value="<%= question.title %>" >
              </div>
              <div class="col-md-3">
                <select id="difficultySelector" name="lang" required="required">
                    <option value="easy" <% if(question.difficulty=='easy'){ %>selected="selected"<% } %> >Easy</option>
                    <option value="medium" <% if(question.difficulty=='medium'){ %>selected="selected"<% } %> >Medium</option>
                    <option value="hard" <% if(question.difficulty=='hard'){ %>selected="selected"<% } %> >Hard</option>
                </select>
              </div>
              <div class="col-md-2">
                UPDATE
              </div>
            </div>

            <!-- MAIN-CONTENT -->
            <div class="row" id="main-content">

                <div class="col-md-6" id="left-col">
                      <div class="row" id="left-col-header">
                        <ul>
                        			<li id="tabD" class="tab active" onclick="changeTab('Description')">
                                Description
                        			</li>
                              <li id="tabS" class="tab" onclick="changeTab('Sample')">
                                Sample Testcases
                        			</li>
                              <li id="tabH" class="tab" onclick="changeTab('Hidden')">
                                Hidden Testcases
                        			</li>
                        </ul>
                      </div>
                      <!-- <div class="row" id="left-col-body">
                        <div class ="col-md-12">
                          <span id="span">
                        </span>
                        </div>
                      </div> -->
                      <div class="row" id="left-col-body-description">
                        <div class ="col-md-12">
                          <span id="span"></span>
                        </div>
                      </div>
                      <!-- left-col-body-test-results -->
                      <div class="row" id="left-col-body-sample">
                        <div class ="col-md-12">
                          <table>
                            <tr>
                              <td>sampleInput</td>
                              <td style="width:100%; padding-left:20px;"><textarea class="form-control" style="height:250px" rows="5" id="sampleInput"><%= question.sampleInput %></textarea></td>
                            </tr>
                            <tr>
                              <td>sampleOutput</td>
                              <td style="width:100%; padding-left:20px;"><textarea class="form-control" style="height:250px" rows="5" id="sampleOutput"><%= question.sampleOutput %></textarea></td>
                            </tr>
                          </table>

                        </div>
                      </div> <!-- left-col-body-sample -->

                      <div class="row" id="left-col-body-hidden">
                        <div class ="col-md-12">
                            <table>
                              <tr>
                                <td>hiddenInput</td>
                                <td style="width:100%; padding-left:20px;"><textarea class="form-control" style="height:250px" rows="5" id="hiddenInput"><%= question.hiddenInput %></textarea></td>
                              </tr>
                              <tr>
                                <td>hiddenOutput</td>
                                <td style="width:100%; padding-left:20px;"><textarea class="form-control" style="height:250px" rows="5" id="hiddenOutput"><%= question.hiddenOutput %></textarea></td>
                              </tr>
                            </table>
                        </div>
                      </div>

                </div>  <!--"#left-col" -->

                <div class="col-md-6" id="right-col">
                      <div class="row" id="right-col-header">
                          <div class="col-md-6">
                            Description Markup
                          </div>
                          <div class="col-md-4">
                          </div>
                          <div class="col-md-1">Reset</div>
                          <div class="col-md-1"></div>
                      </div>
                      <div class="row" id="editor" onkeyup='showData()'><%= question.description  %>
                      </div>

                      <div class="row" id="right-col-sub-header">
                        <div class="col-md-12">shortDescription</div>
                        <!-- <div class="col-md-6">Output</div> -->
                      </div>
                      <div class="row" id="editor2"><%= question.shortDescription %></div>

                </div>
            </div>

            <!-- FOOTER -->
            <div class="row" id="header">
                <div class="col-md-8">
                  <!-- <select id="questionSelector">
                    <option value="c" <% if(user.defaultLanguage=="c"){ %> selected="selected" <% } %> >C </option>
                    <option value="python2" <% if(user.defaultLanguage=="python2"){ %> selected="selected" <% } %> >Python 2</option>
                    <option value="python3" <% if(user.defaultLanguage=="python3"){ %> selected="selected" <% } %> >Python 3</option>
                  </select> -->
                </div>
                <div class="col-md-1">
                  <!-- <button id="updateButton" type = "button" class = "btn btn-success">UPDATE</button> -->
                </div>
                <div class="col-md-1"></div>
                <div class="col-md-1">
                  <button id="backButton" type = "button" class = "btn btn-success">BACK</button>
                </div>
                <div class="col-md-1">
                  <button id="updateButton" type = "button" class = "btn btn-success">UPDATE</button>
                </div>
            </div>



